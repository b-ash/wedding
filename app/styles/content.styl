@import nib
@import constants

::selection
  background: #999

.content
  width: 100%
  margin-top: navHeight
  font-family: Gilda Display, Helvetica, Arial, sans-serif
  font-weight: bold

  .splash-photo
    width: 100%
    height: 311px  // 500px

    // Remove
    background-color: #f6f6f6
    text-align: center
    padding-top: 289px

  > a[name]
    display: block
    margin-bottom: navHeight + 10

  .section
    position: relative
    width: 700px
    padding: 10px 50px 90px
    margin: 0 auto
    min-height: 285px

    border-bottom: 2px solid #DDD

    &:last-child
      border-bottom: 0

    ul
      list-style: none
      margin: 0 0 20px
      padding: 0

      h3
        font-weight: bolder

      li
        padding: 10px 0

    div
      display: inline-block

      &.desc
        position: absolute
        margin-left: 20px
        width: 550px

        p
          line-height: 1.5
          margin-top: 0

      &.pic
        overflow: hidden
        border-radius(75px)

        img
          width: 150px
          height: 150px

      // Do some manual overrides to get the picture centered
      &.bash
        margin-top: 25px

.wrap
  margin-top: 40px

  p
    font-weight: bold
    color: #800000
    text-align: center

  .title
    font-size: 30px

  .countdown
    font-size: 20px